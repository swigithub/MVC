                //        $.ajax({
                //            url: "/Defnation/DeleteGroup/?id=" + WGroupId,
                //            type: "POST",
                //            contentType: "application/json; charset=utf-8",
                //            datatype: JSON,
                //            success: function (result) {
                //                Curr.parent().parent().remove();
                //                swal("Deleted !", "Successfully Deleted !", "success");
