@using SWI.Libraries.AirView.Entities;
@model AV_NetLayerStatus



<form action="#" method="post" onsubmit="RedriveSubmit(); return false;" id="frm-ReDrive">
    <div class="row">
        <div class="col-sm-12">
            @Html.HiddenFor(m => m.NetworkModeId)
            @Html.HiddenFor(m => m.BandId)
            @Html.HiddenFor(m => m.CarrierId)
            @Html.HiddenFor(m => m.SiteId)
            @Html.HiddenFor(m => m.ScopeId)
            <div class="form-group">
                @Html.Label("Re-Drive Type", htmlAttributes: new { @class = "control-label " })
                <div class="">
                    @Html.DropDownListFor(m => m.redriveTypeId, ViewBag.RedriveTypes as List<SelectListItem>, new { @class = "form-control select", required = "required" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Reason", htmlAttributes: new { @class = "control-label " })
                <div class="">
                    @Html.DropDownListFor(m => m.redriveReasonId, ViewBag.Reasons as List<SelectListItem>, new { @class = "form-control select", required = "required" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.TextAreaFor(model => model.redriveComments, new { @class = "form-control", required = "required", rows = "3" })
                </div>
            </div>
            @if (!Model.isRedrive)
            {
                <div class="form-group">
                    <button class="btn btn-info pull-right" id="btn-frm-ReDrive">Save</button>

                </div>
            }

        </div>
    </div>
</form>
