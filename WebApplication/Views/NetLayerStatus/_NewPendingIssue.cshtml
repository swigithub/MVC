@using SWI.Libraries.AirView.Entities;
@model AV_NetLayerStatus



<form action="/NetLayerStatus/NewPendingIssue" method="post" onsubmit="PendingIssuesSubmit(); return false;" id="frm-PendingIssue">
    <div class="row">
        <div class="col-sm-12">
            @Html.HiddenFor(m => m.NetworkModeId)
            @Html.HiddenFor(m => m.BandId)
            @Html.HiddenFor(m => m.CarrierId)
            @Html.HiddenFor(m => m.ScopeId)
            @Html.HiddenFor(m => m.SiteId)
            <div class="form-group">
                @Html.Label("Reason", htmlAttributes: new { @class = "control-label " })
                <div class="">
                    @Html.DropDownListFor(m => m.StatusReason, ViewBag.Reasons as List<SelectListItem>, new { @class = "form-control select", required = "required" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.TextAreaFor(model => model.PendingIssueDesc, new { @class = "form-control", required = "required", rows = "3" })
                </div>
            </div>
            @if (Model.StatusReason == 0)
            {
                <div class="form-group">
                    <button class="btn btn-info pull-right">Save</button>
                </div>
            }

        </div>
    </div>
</form>
