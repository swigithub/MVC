

@model List<AirView.DBLayer.Project.Model.PM_KPI>
@if (Model.Count > 0)
{
  for(var j=0;j<Model.Count();j++)
    {
       
    <tr class="newkpirow">
        <td><input type='checkbox'  class="kpicheckbox" /></td>
        <td>
            @Html.TextBoxFor(a => a[j].Kpi_Name, new { @class = "form-control Kpi_Name required", @required = "required" })
            @Html.TextBoxFor(a => a[j].KPI, new { @class = "form-control KPI hidden" })
            <input type="hidden" value="true" class="IsActive" name="[@j].IsActive" />
        </td>
        <td>
            @Html.DropDownListFor(a=>a[j].Technology, new SelectList(ViewBag.Technologies, "DefinationId","DefinationName",Model[j].Technology), "--select--",htmlAttributes: new { @class = "form-control Technology required", @required = "required" })
          
        </td>
        <td>
            @Html.DropDownListFor(a => a[j].BandId, new SelectList(Model[j].Bands, "DefinationId", "DefinationName", Model[j].BandId), "--select--", htmlAttributes: new { @class = "form-control Band required", @required = "required" })

        </td>
        <td>
            @Html.DropDownListFor(a => a[j].DataType, new SelectList(ViewBag.DataType, "DefinationId", "DefinationName", Model[j].DataType), "--select--", htmlAttributes: new { @class = "form-control Datatype required", @required = "required" })
            

        </td>
        <td>
            @Html.DropDownListFor(a => a[j].Level, new SelectList(ViewBag.Level, "DefinationId", "DefinationName", Model[j].Level), "--select--", htmlAttributes: new { @class = "form-control Level required", @required = "required" })
          
        </td>
        <td>
            @Html.DropDownListFor(a => a[j].Kpi_Type, new SelectList(ViewBag.KpiType, "DefinationId", "DefinationName", Model[j].Kpi_Type), "--select--", htmlAttributes: new { @class = "form-control KpiType ExistedKpiType required", @required = "required" })
         </td>
        <td>
            @Html.TextBoxFor(a => a[j].Weightage, new { @class = "form-control Weightage required", @required = "required",@type="number" })
        </td>
        <td>
            
            <div class="formulaf1">
                <a class="check-icon" data-backdrop="static" data-keyboard="false" href="#"> <i Parent-name="@Model[j].Kpi_Name" unique="@Model[j].KPI" class="fa fa-check OpenThresholdModal" aria-hidden="true"></i> </a>

                @if (Model[j].Formula == "")
                {
                    <input type="text" name="[@j].Formula" Computed-Value="[@j].ComputedValue" class="demo-input-custom-labels hidden ExistedFormula" Formula="@Model[j].Formula" Initialize="false" />
                }
                else
                {
                    <input type="text" name="[@j].Formula" Computed-Value="@Model[j].ComputedValue" value="@Model[j].Formula" class="demo-input-custom-labels ExistedFormula" Formula="@Model[j].Formula" Initialize="false" />

                }
            </div>
         </td>
    </tr>
       
    }

}
<tr><td colspan="9"></td></tr>
<style>
    a.check-icon {
    float: left;
    width: 30px;
    height: 30px;
}

ul.token-input-list {
    clear: none;
    width: auto;
    float: none;
}
.formulaf1 {
    position: relative;
    height: 50px;
    margin: -10px 0;
    padding: 15px 0;
}
.formulaf1 ul.token-input-list-facebook {
    position: absolute;
    right: 48px;
    top: 100%;
    height: auto;
    border: 0;
    width: 820px;
    max-height: 42px;
    transition: all 0.3s;
    border: 2px solid #FFF;
    overflow: auto;
    background: #f8f8f8;
}
li.token-input-token-facebook p{font-size:13px}
li.token-input-token-facebook{
    padding:4px 7px;
}
.phisaljao td {
    padding-top:40px!important;
}
ul.token-input-list-facebook li input{
    background:#f8f8f8;
    width:auto!important;
}
