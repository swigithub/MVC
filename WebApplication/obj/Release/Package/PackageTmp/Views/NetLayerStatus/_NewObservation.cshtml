@using SWI.Libraries.AirView.Entities;
@model AV_NetLayerStatus



<form action="/NetLayerStatus/NewObservation" method="post" onsubmit="ObservationSubmit(); return false;" id="frm-Observation">
    <div class="row">
        <div class="col-sm-12">
            @Html.HiddenFor(m => m.NetworkModeId)
            @Html.HiddenFor(m => m.BandId)
            @Html.HiddenFor(m => m.CarrierId)
            @Html.HiddenFor(m => m.SiteId)
            @Html.HiddenFor(m => m.ScopeId)

            <div class="form-group">
                <div class="">
                    @Html.TextAreaFor(model => model.netLayerObservations, new { @class = "form-control", required = "required", placeholder = "Observation & Recommendations", rows = "3" })
                </div>
            </div>

            <div class="form-group">
                <button class="btn btn-info pull-right">Save</button>

            </div>
        </div>
    </div>
</form>
