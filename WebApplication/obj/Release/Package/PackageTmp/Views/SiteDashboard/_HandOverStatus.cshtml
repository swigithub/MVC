@using SWI.Libraries.AirView.Entities
@model IEnumerable<HandoverStatus>


<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Handover Status</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th style="width: 10px">Sector</th>
                    <th>CW</th>
                    <th>CCW</th>
                    <th style="width: 40px">Inter HO</th>
                </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Sector</td>
                            <td>
                                @if (item.CwHandoverStatus)
                                {
                                    <i style="color:green" class="fa fa-check"></i>
                                }
                                else if (!item.CwHandoverStatus == false)
                                {
                                    <i style="color:red" class="fa fa-close"></i>
                                }
                            </td>
                            <td>
                                @if (item.Ccwhandoverstatus)
                                {
                                    <i style="color:green" class="fa fa-check"></i>
                                }
                                else if (!item.Ccwhandoverstatus == false)
                                {
                                    <i style="color:red" class="fa fa-close"></i>
                                }
                            </td>
                            <td>
                                @if (item.ICcwhandoverstatus)
                                {
                                    <i style="color:green" class="fa fa-check"></i>
                                }
                                else if (item.ICcwhandoverstatus == false)
                                {
                                    <i style="color:red" class="fa fa-close"></i>
                                }
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>