@using SWI.Libraries.AirView.Entities
@model IEnumerable<SiteDashboardClientOrVendor>


@if (Model != null && Model.Count() > 0)
{

    var Client = Model.Where(m=>m.ClientType== "Client").FirstOrDefault();
