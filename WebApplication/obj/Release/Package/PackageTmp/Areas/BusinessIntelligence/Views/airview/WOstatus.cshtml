<div class="row grid muuri page" ng-controller="grids" data-pagename="WOstatus">
    <div class="col-xl-12 col-lg-12" data-position="1">
        <div class="widget">
            <div class="title-bar" style="background:{{titlebg}};">
                <h3>
                    <i class="fa fa-exclamation-triangle"></i>
                    <span class="update-name">{{widgetname_01}}</span>
                    <span class="cache-value"></span>
                    <input ng-model="widgetname_01" ng-init="widgetname_01='Search Criterea'" type="text" />
                </h3>

                <div class="buttons-sets">
                    <a class="custom-btn icon-only remove-btn"><i class="fa fa-times"></i><span class="custom-tooltip">Remove</span></a>
                    <a class="custom-btn icon-only collapse-btn"><i class="fa fa-minus"></i><span class="custom-tooltip">Collapse</span></a>
                    <a class="custom-btn icon-only opt-btn"><i class="fa fa-columns"></i><span class="custom-tooltip">Panel Size</span></a>
                    <ul class="opt-dropdown">
                        <li class="has-children">
                            <a href="#" title="">Panel Size</a>
                            <ul class="column-size">
                                <li><a class="onesixth" href="#" title="">One Sixth <img src="images/onesixth.png" alt=""> </a></li>
                                <li><a class="onethird" href="#" title="">One Third <img src="images/onethird.png" alt=""> </a></li>
                                <li><a class="half" href="#" title="">Half <img src="images/half.png" alt=""></a></li>
                                <li><a class="twothird" href="#" title="">Two Thrid <img src="images/twothird.png" alt=""></a></li>
                                <li><a class="fivesixth" href="#" title="">Five Sixth <img src="images/fivesixth.png" alt=""> </a></li>
                                <li><a class="fullwide" href="#" title="">Full Wide <img src="images/full.png" alt=""></a></li>
                            </ul>
                        </li>
                        <li class="has-children">
                            <a href="#" title="">Panel Color</a>
                            <ul class="panel-color">
                                <li>
                                    <a href="#" title="">
                                        <input class="bgcolor" type="text" value="#fff" ng-model="titlebg" ng-init="titlebg = '#fff'" />
                                        <div class="colorpickerwrapper style2"><div colorpicker></div></div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="content-wrapper">
                <form action="">
                    <div class="row align-items-end">
                        <div class="col-lg-auto col-md-12">
                            <label for="">Type</label>
                            <select name="" id="">
                                <option value="">Layer</option>
                            </select>
                        </div>
                        <div class="col-lg-auto col-md-12">
                            <label for="">Site Code</label>
                            <input type="text" placeholder="" />
                        </div>
                        <div class="col-lg-auto col-md-12">
                            <label>From</label>
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                <input datedropper data-large-mode="true" data-large-mode="true" data-min-year="1800" data-max-year="2030" type="text" />
                            </label>
                        </div>
                        <div class="col-lg-auto col-md-12">
                            <label>To</label>
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                <input datedropper data-large-mode="true" data-large-mode="true" data-min-year="1800" data-max-year="2030" type="text" />
                            </label>
                        </div>
                        <div class="col-lg-auto col-md-12">
                            <button class="custom-btn color1 medium"><i class="fa fa-search"></i> Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="toggle-item widget-settings default_settings" ng-show="vm.dashboardAndReportComInformation.widgetList[chngeIdx ].defaultPageConfiguration.statusColors.length>0">
    <h2><i class="fa fa-cog"></i> Status Colors</h2>
    <div class="content" style="display: none;">
        <form>
            <div class="row header">
                <div class="col-md-4 col-sm-4 col-lg-4"> Status</div>
                <div class="col-md-4 col-lg-4 col-sm-4 "> Bg Clr</div>
                <div class="col-md-4 col-lg-4 col-sm-4 "> Fnt Clr</div>
            </div>
            <div class="row" ng-repeat="item in vm.dashboardAndReportComInformation.widgetList[chngeIdx ].defaultPageConfiguration.statusColors track by $index">
                <div class="col-md-4 col-sm-4 col-lg-4"> {{vm.dashboardAndReportComInformation.widgetList[chngeIdx ].defaultPageConfiguration.statusColors[$index].statusName}}</div>
                <div class="col-md-4 col-sm-4 col-lg-4">
                    <input class="bgcolor" type="text" ng-model="vm.dashboardAndReportComInformation.widgetList[chngeIdx ].defaultPageConfiguration.statusColors[$index].backgroundColor"/>
                    <div class="colorpickerwrapper">
                        <div colorpicker></div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4">
                    <input class="bgcolor" type="text"  ng-model="vm.dashboardAndReportComInformation.widgetList[chngeIdx ].defaultPageConfiguration.statusColors[$index].fontColor" />
                    <div class="colorpickerwrapper">
                        <div colorpicker></div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div> 