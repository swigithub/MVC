
@model List<AirView.DBLayer.Project.Model.PM_Threshold>


@if (Model.Count > 0)
{
    for (var j = 0; j < Model.Count(); j++)
    {

        <tr class="newthresholdrow">
            <td><input class="thresholdcheckbox" type='checkbox'  /></td>
            <td>
                @*@Html.TextBoxFor(a => a[j].KPIName, new { @class = "form-control KPIName required",@required="required" })*@
                <div class="label label-default" style="background-color:white;color:black;font-size:15px" >@Model[j].KPIName</div>
                @Html.TextBoxFor(a => a[j].Threshold, new { @class = "form-control hidden Threshold" })
                <input type="hidden" value="true" class="IsActive" name="[@j].IsActive" />
                 </td>
            <td>
                @Html.DropDownListFor(a => a[j].Condition, new SelectList(ViewBag.Condition, "DefinationId", "DefinationName", Model[j].Condition), "--select--", htmlAttributes: new { @class = "form-control Condition required", @required = "required" })
            </td>
            <td>
                @Html.TextBoxFor(a => a[j].Threshold_Name, new { @class = "form-control Threshold_Name required", @required = "required" })
                @if(@Model[j].ThresholdTo !=""){
                @Html.TextBoxFor(a => a[j].ThresholdTo, new { @class = "form-control ThresholdTo",@required= "required" })
                }
                else
                {
                    @Html.TextBoxFor(a => a[j].ThresholdTo, new { @class = "form-control ThresholdTo hidden" })
                }
             </td>
            <td>
                @Html.TextBoxFor(a => a[j].Color, new { @class = "form-control Color", @type="color" })
                @*<div style="margin-top:4px;background-color:@Model[j].Color" class="badge label-default" >@Model[j].Color</div>*@
               @*<input type="color" value="@Model[j].Color" name="[@j]Color" class="form-control required" />*@
            </td>
            <td>
                @Html.DropDownListFor(a => a[j].Action, new SelectList(ViewBag.Action, "DefinationId", "DefinationName", Model[j].Action), "--select--", htmlAttributes: new { @class = "form-control Action required", @required = "required" })
               </td>
        </tr>

    }
}