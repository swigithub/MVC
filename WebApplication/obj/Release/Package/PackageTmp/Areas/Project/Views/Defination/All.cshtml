<div ng-app="ProjectManagment" ng-controller="DefinationList">
    <div class="jarviswidget light-widget jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" role="widget">
        <header role="heading">
            <div class="jarviswidget-ctrls" role="menu">

            </div>
            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
            <h2>Projects </h2>


            <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            <div class="widget-toolbar">
@if (ViewBag.AllowUri("/project/defination/new"))
{

                <a href="/project/defination/new" class="btn btn-info btn-xs">Create New Project</a>
}
            </div>
        </header>

        <!-- widget div-->
        <div role="content">
            <div class="widget-body no-padding">
                <div class="input-group" >
                    <input ng-model="q" ng-keypress="paginator.firstPage();" id="search" class="form-control ng-pristine ng-valid ng-empty ng-touched" style="width: 22%;margin-top: 3px;margin-bottom: 3px;margin-right: 2px;margin-left: 77.5%;left: 0px;padding-top: 0px;padding-bottom: 0px;height: 29px;top: 3.5;top: 3.5;top: 4px;" placeholder="Search">
                       <span class="input-group-btn">
                        <div class="dropdown">

                            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" style="margin-top:5px;margin-bottom: 5px;margin-right: 5px;" data-toggle="dropdown">
                               {{rowsPPage}}
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                                <li style="width: 50px;" ng-click="paginator.firstPage(); pagesizes(10);" role="presentation"><a style="width: 50px;" role="menuitem" tabindex="-1" href="#">10</a></li>
                                <li style="width: 50px;" ng-click="paginator.firstPage(); pagesizes(25)" role="presentation"><a style="width: 50px;" role="menuitem" tabindex="-1" href="#">25</a></li>
                                <li  style="width: 50px;" ng-click="paginator.firstPage(); pagesizes(50)" role="presentation"><a style="width: 50px;" role="menuitem" tabindex="-1" href="#">50</a></li>
                                <li style="width: 50px;" ng-click="paginator.firstPage(); pagesizes(10000)" role="presentation"><a style="width: 50px;" role="menuitem" tabindex="-1" href="#">All</a></li>
                            </ul>
                        </div>
                    </span>
                </div>
               
           
              
                <div id="dt_basic_wrapper" class="">
                    

                    <table class="table table-responsive" style="margin-bottom: 5px;">
                        <thead>
                            <tr>
                                <th></th>

                                <th>Project</th>
                                <th>Client</th>
                                <th>End Client</th>
                                <th>Actual Start</th>
                                <th>Actual End</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Progress</th>
                                <th>Action(s)</th>
                                @*<th>Edit</th>
                                <th>Template(s)</th>
                                <th>Timeline</th>*@
                            </tr>
                        </thead>
                        <tbody>


                            <tr ng-repeat="p in testValues | filter:q | paginate:rowsPerPage">
       

                                <td><div style="height:20px;width:20px;background-color:{{p.Color }}"></div></td>

                                <td><a href="/Project/Dashboard/Index?Id={{p.ProjectId}}">{{p.ProjectName}}</a> </td>
                                <td>{{p.Client}}</td>
                                <td>{{p.EndClient}}</td>
                                <td>{{p.ActualStartDate.replace('/Date(','').replace(')/','') | date : "dd/MM/yyyy" }}</td>
                                <td>{{p.ActualEndDate.replace('/Date(','').replace(')/','') | date : "dd/MM/yyyy" }}</td>
                                <td>
                                    <span class="label label-default" style="background-color:{{p.StatusColor}}">{{p.Status}}</span>
                                </td>
                                <td>
                                    <span class="label label-default" style="background-color:{{p.Color}}">{{p.Priority}}</span></td>
                                <td>
                                    <span style="text-align:left">{{p.CompletionPercent}}%</span>
                                    <div class="progress progress-micro">
                                        <div class="progress-bar progress-bar-primary" role="progressbar" style="width: {{p.CompletionPercent}}%;background-color:{{p.Color}}"></div>
                                    </div>
                                </td>
                                <td>
@if (ViewBag.AllowUri("/project/defination/new"))
{
                                    <a class="btn btn-default txt-color-teal" href="/project/defination/new/{{p.ProjectId}}" title="Edit Project"><i class="fa fa-edit"></i></a>
}   @if (ViewBag.AllowUri("/Project/Template/list"))
{
                                    <a class="btn btn-default txt-color-blueLight" href="/Project/Template/list?ProjectId={{p.ProjectId}}"  title="Project Templates"><i class="fa fa-list-alt"></i></a>
}   @if (ViewBag.AllowUri("/Project/Defination/Details"))
{
                                    <a class="btn btn-default txt-color-green" href="/Project/Defination/Details/{{p.ProjectId}}" title="Project Timeline"> <i class="fa fa-calendar"></i></a>
}
                                </td>
                                @*<td>
                                    <a href="/project/defination/new/{{p.ProjectId}}"><i class="fa fa-edit"></i></a>
                                </td>
                                <td>
                                    <a href="/Project/Template/list?ProjectId={{p.ProjectId}}"><i class="fa fa-list-alt"></i></a>
                                </td>
                                <td>
                                    <a href="/Project/Defination/Details/{{p.ProjectId}}"><i class="fa fa-calendar"></i></a>
                                </td>*@

                            </tr>
                        </tbody>
                        <tfoot>
                            @*<tr>
                                <td>
                                    <div class="control-group">
                                        <label class="control-label" for="rows-per-page">Rows per page</label>
                                        <div class="controls">
                                            <select id="rows-per-page"  ng-model="rowsPerPage" class="input-xlarge">
                                                <option>50</option>
                                                <option>100</option>
                                                <option>200</option>
                                                <option>500</option>
                                            </select>
                                        </div>
                                    </div>
                                </td>
                            </tr>*@
                            <tr>
                                <td style="border:none">
                                    <paginator></paginator>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
                <div class="pagination text-center col-sm-6" style="margin-top: 0px;margin-bottom: 5px;border-bottom-width: 5px;" >

                    <ul style="padding-left: 20px;">
                        <li ng-click="paginator.firstPage();FirstPage();" ng-class="paginator.isFirstPage() && 'disabled'">
                            <a href="">
                                <i class="fa fa-angle-double-left" ng-class="paginator.isFirstPage() && 'icon-white'"></i>
                            </a>
                        </li>
                        <li ng-click="paginator.perviousPage();PriousPages();" ng-class="paginator.isFirstPage() && 'disabled'">
                            <a href="">
                                <i class="fa fa-angle-left" ng-class="paginator.isFirstPage() && 'icon-white'"></i>
                            </a>
                        </li>
                        <li ng-click="paginator.setPage(i);AnyPage(i); " ng-repeat="i in [] | forLoop:paginator.lowerLimit():paginator.pageCount() | limitTo : paginator.limitPerPage" ng-class="paginator.page==i && 'active'">
                            <a href="">
                                <i> {{i+1}}</i>
                            </a>
                        </li>
                        <li ng-click="paginator.nextPage();NextPages();" ng-class="paginator.isLastPage() && 'disabled'">
                            <a href="">
                                <i class="fa fa-angle-right" ng-class="paginator.isLastPage() && 'icon-white'"></i>
                            </a>
                        </li>
                        <li ng-click="paginator.lastPage();lastPages();" ng-class="paginator.isLastPage() && 'disabled'">
                            <a href="">
                                <i class="fa fa-angle-double-right" ng-class="paginator.isLastPage() && 'icon-white'"></i>
                            </a>
                        </li>
                    </ul>


                </div>   
                <div class="col-sm-6 infoBar"><div class="infos" style="margin-left: 70%;">Showing {{ShowEntries+1}} to {{showeentries((testValues | filter: q).length);}} of {{ (testValues | filter: q).length }} entries</div></div>            
                </div>
            </div>
        </div>

    </div>
  
</div>
@section scripts{

    <script src="~/Areas/Project/Content/DefinationList.js"></script>

}
