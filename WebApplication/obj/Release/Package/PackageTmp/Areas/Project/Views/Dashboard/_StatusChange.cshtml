<div class="row" >
    <div class="col-md-2">
        <span>Stages</span>
        <select ng-model="StageStatusId" class="form-control" ng-change="fnStageStatusId()" ng-options="x.TaskId as x.Stage for x in Stages"></select>
    </div>
    <div class="col-md-2">
        <span>Status</span>
        <select ng-model="statusChange.StatusId" class="form-control" ng-options="x.DefinationId as x.DisplayText for x in ProjectStatus"></select>
    </div>
</div>
<br />
<br />
